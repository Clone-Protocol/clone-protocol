{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "outDir": "./lib",
    "strict": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["sdk"],
  "exclude": ["node_modules", "tests"]
}
